{
  "name": "wp-edits",
  "version": "0.0.1",
  "description": "A simple application to do wordpress things",
  "main": "public/main.js",
  "scripts": {
    "start:electron": "electron .",
    "start:react": "craco start",
    "test": "craco test --watchAll=false",
    "test:watch": "craco test",
    "dev": "concurrently \"cross-env BROWSER=none npm run start:react\" \"wait-on http://localhost:3000 && set ELECTRON_START_URL=http://localhost:3000 && electron .\"",
    "dist:win": "npx build --x64 --win  --c.extraMetadata.main=build/main.js --publish never",
    "dist:lin": "npx build --x64 --linux  --c.extraMetadata.main=build/main.js --publish never",
    "dist:mac": "npx build --x64 --macos  --c.extraMetadata.main=build/main.js --publish never",
    "build": "craco build",
    "eject": "craco eject",
    "postinstall": "install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CroquetMickael/wp-edits.git"
  },
  "author": "Croquet Mickael",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CroquetMickael/wp-edits/issues"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "homepage": "./",
  "dependencies": {
    "draft-js": "^0.10.5",
    "draft-js-export-html": "^1.3.3",
    "electron-is-dev": "^1.0.1",
    "immutable": "^4.0.0-rc.12",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-draft-wysiwyg": "^1.13.2",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.8",
    "sqlite3": "^4.0.6",
    "squel": "^5.12.2",
    "tailwindcss": "^0.7.4",
    "typescript": "3.3.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@craco/craco": "^3.6.0",
    "@reach/router": "^1.2.1",
    "@types/draft-js": "^0.10.30",
    "@types/jest": "^24.0.0",
    "@types/reach__router": "^1.2.3",
    "@types/react": "16.8.2",
    "@types/react-dom": "16.8.0",
    "@types/react-draft-wysiwyg": "^1.12.2",
    "@types/react-router-dom": "^4.3.1",
    "@types/sqlite3": "^3.1.5",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "4.0.3",
    "electron-builder": "^20.40.2",
    "electron-devtools-installer": "^2.2.4",
    "mocha": "^5.2.0",
    "react-testing-library": "^6.0.2",
    "spectron": "^5.0.0",
    "tailwind": "^4.0.0",
    "ts-jest": "^24.0.0",
    "wait-on": "^3.2.0"
  }
}
